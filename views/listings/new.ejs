<% layout("layouts/boilerplate") %>

    <div class="row mt-2">
 <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <br><br/>
    <form method ="POST" action="/listings" 
    novalidate class="needs-validation"
    enctype = "multipart/form-data">
      <div class="mb-3">
        <label for="title">Title:</label>
        <input name="listing[title]" placeholder="Title"  type="text" class="form-control" required/>
        
        <div class ="valid -feedback">looks good</div>
        </div>
        <div class="mb-3">
        <label for="description">Description:</label>
        <textarea name="listing[description]" placeholder="Description"  type="text" class="form-control" required></textarea>
        <div class ="invalid -feedback">Please enter a valid description</div>
        </div>

        <div class="mb-3">
        <label for="image">Upload Image:</label>
        <input name="listing[image]"
         type="file" class="form-control">
        <div class ="invalid -feedback">Please enter a valid image URL</div>
        </div>


        <div class ="row ">
        <div class="mb-3  col-md-4 col-sm-12">
        <label for="price">Price:</label>
        <input name="listing[price]" placeholder="Price"  type="number" class="form-control" required>
        <div class ="invalid -feedback">Please enter a valid price</div>
        </div>

        <div class="mb-3 col-md-8 col-sm-12">
        <label for="country">Country:</label>
        <input name="listing[country]" placeholder="Country"  type="text" class="form-control" required>
        <div class ="invalid -feedback">Please enter a valid country</div>
        </div>

        </div>
        <div class="mb-3">
        <label for="location">Location:</label>
        <input name="listing[location]" placeholder="Location"  type="text" class="form-control"  required>
        <div class ="invalid -feedback">Please enter a valid location</div>
        </div>
        <button class ="btn btn-dark add-btn mt-3">Add Listing</button>
        <br><br/>
    </form>
    </div>
</div>