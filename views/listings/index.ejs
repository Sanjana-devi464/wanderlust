<% layout("layouts/boilerplate") %>
<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity:0.7;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        color: inherit;
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
        transform: translateY(-2px);
    }

    .filter.active {
        opacity: 1;
        color: #fe424d;
        font-weight: bold;
    }

    .filter.active i {
        color: #fe424d;
    }

    .filter p{
        font-size:0.8rem;

    }

    .tax-info {
        display: none;
    }
    .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 2rem;
        display: flex;
        align-items: center;
    }

    /* Enhanced Card Styling */
    .listing-card {
        margin-bottom: 2rem;
        padding: 0 1rem;
    }

    .listing-card .card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        overflow: hidden;
        height: 100%;
        background: white;
    }

    .listing-card .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    }

    .listing-card .card-img-top {
        height: 250px;
        object-fit: cover;
        transition: transform 0.3s ease;
        border-radius: 20px 20px 0 0;
    }

    .listing-card .card:hover .card-img-top {
        transform: scale(1.05);
    }

    .listing-card .card-body {
        padding: 1.5rem;
        position: relative;
    }

    .listing-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }

    .listing-location {
        font-size: 0.9rem;
        color: #7f8c8d;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
    }

    .listing-location i {
        margin-right: 0.5rem;
        color: #e74c3c;
    }

    .listing-price {
        font-size: 1.1rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1rem;
    }

    .listing-price .currency {
        font-size: 0.9rem;
        color: #7f8c8d;
    }

    .listing-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 25px;
        color: white;
        font-weight: 600;
        padding: 0.7rem 1.5rem;
        transition: all 0.3s ease;
        width: 100%;
        position: relative;
        overflow: hidden;
    }

    .listing-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        color: white;
    }

    .listing-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        transition: left 0.3s ease;
        z-index: -1;
    }

    .listing-btn:hover::before {
        left: 0;
    }

    .category-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 0.3rem 0.8rem;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .price-highlight {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 15px;
        display: inline-block;
        margin-bottom: 1rem;
    }

    .heart-icon {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(255, 255, 255, 0.9);
        border: none;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        z-index: 10;
    }

    .heart-icon:hover {
        background: white;
        transform: scale(1.1);
    }

    .heart-icon i {
        color: #e74c3c;
        transition: all 0.3s ease;
    }

    .eye-icon {
        position: absolute;
        bottom: 1rem;
        right: 1rem;
        background: rgba(255, 255, 255, 0.9);
        border: none;
        border-radius: 50%;
        width: 45px;
        height: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        z-index: 10;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .eye-icon:hover {
        background: rgba(255, 255, 255, 1);
        transform: scale(1.1);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    .eye-icon i {
        color: black;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

    .location-match-card {
        border: 2px solid #27ae60 !important;
        background: linear-gradient(135deg, #ffffff 0%, #f8fffa 100%) !important;
    }

    .rating-stars {
        color: #f39c12;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    @media (max-width: 768px) {
        .listing-card .card {
            margin-bottom: 1rem;
        }
        
        .listing-card .card-img-top {
            height: 200px;
        }
    }

</style>

<% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
<div class="container mt-3">
    <div class="alert alert-info d-flex justify-content-between align-items-center">
        <div>
            <strong>Search Results for:</strong> "<%= searchQuery %>"
            <span class="badge bg-primary ms-2"><%= allListings.length %> result(s)</span>
            <% if (typeof locationMatches !== 'undefined' && locationMatches > 0) { %>
                <span class="badge bg-success ms-1"><%= locationMatches %> location match<%= locationMatches > 1 ? 'es' : '' %></span>
            <% } %>
        </div>
        <a href="/listings" class="btn btn-outline-secondary btn-sm">View All Listings</a>
    </div>
    <% if (typeof locationMatches !== 'undefined' && locationMatches > 0) { %>
    <div class="alert alert-success py-2">
        <small><i class="fas fa-map-marker-alt me-1"></i>Location matches are shown first, followed by other relevant results</small>
    </div>
    <% } %>
</div>
<% } %>

<!-- Category Filter Results -->
