    </a>


   <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
        <input class="form-check-input"
         type="checkbox"
         role="switch"
         id="switchCheckDefault">

        <label class="form-check-label"
         for="switchCheckDefault">
         Display total after Taxes</label>
   </div>
   </div>

   </div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4">
<% for(let i = 0; i < allListings.length; i++) { %>
    <% let listing = allListings[i]; %>
    <% let isLocationMatch = typeof locationMatches !== 'undefined' && i < locationMatches; %>
    <div class="col listing-card">
        <div class="card <%= isLocationMatch ? 'location-match-card' : '' %>">
            <div style="position: relative;">
                <!-- Category Badge -->
                <% if (listing.category) { %>
                <div class="category-badge">
                    <%= listing.category %>
                </div>
                <% } %>
                
                <!-- Heart/Favorite Icon -->
                <button class="heart-icon" onclick="toggleFavorite('<%= listing._id %>')">
                    <i class="far fa-heart"></i>
                </button>
                
                <!-- Eye/View Details Icon -->
                <button class="eye-icon" onclick="viewListingDetails('<%= listing._id %>')">
                    <i class="fas fa-eye"></i>
                </button>
                
                <!-- Location Match Badge -->
                <% if (isLocationMatch && typeof searchQuery !== 'undefined') { %>
                <div class="position-absolute" style="top: 1rem; right: 4rem;">
                    <span class="badge bg-success">
                        <i class="fas fa-map-marker-alt me-1"></i>Match
                    </span>
                </div>
                <% } %>
                
                <img src="<%= listing.image && listing.image.url ? listing.image.url : 'https://images.unsplash.com/photo-1564013799919-ab600027ffc6?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=60' %>" 
                     class="card-img-top" 
                     alt="<%= listing.title %>" 
                     onerror="this.src='https://images.unsplash.com/photo-1564013799919-ab600027ffc6?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=60'; this.onerror=null;"
                     loading="lazy">
            </div>
            
            <div class="card-body">
                <!-- Dynamic Rating Stars -->
                <div class="rating-stars">
                    <% if (listing.averageRating > 0) { %>
                        <% const fullStars = Math.floor(listing.averageRating); %>
                        <% const hasHalfStar = listing.averageRating % 1 !== 0; %>
                        <% const emptyStars = 5 - Math.ceil(listing.averageRating); %>
                        
                        <!-- Full stars -->
                        <% for (let i = 0; i < fullStars; i++) { %>
                            <i class="fas fa-star"></i>
                        <% } %>
                        
                        <!-- Half star -->
                        <% if (hasHalfStar) { %>
                            <i class="fas fa-star-half-alt"></i>
                        <% } %>
                        
                        <!-- Empty stars -->
                        <% for (let i = 0; i < emptyStars; i++) { %>
                            <i class="far fa-star"></i>
                        <% } %>
                        
                        <span class="ms-1" style="color: #7f8c8d; font-size: 0.8rem;">(<%= listing.averageRating %>)</span>
                        <span class="ms-1" style="color: #7f8c8d; font-size: 0.8rem;">• <%= listing.reviewCount %> review<%= listing.reviewCount !== 1 ? 's' : '' %></span>
                    <% } else { %>
                        <% for (let i = 0; i < 5; i++) { %>
                            <i class="far fa-star"></i>
                        <% } %>
                        <span class="ms-1" style="color: #7f8c8d; font-size: 0.8rem;">No reviews yet</span>
                    <% } %>
                </div>
                
                <!-- Title -->
                <h5 class="listing-title"><%= listing.title %></h5>
                
                <!-- Location -->
                <div class="listing-location <%= isLocationMatch ? 'text-success fw-bold' : '' %>">
                    <i class="fas fa-map-marker-alt"></i>
                    <%= listing.location %>, <%= listing.country %>
                </div>
                
                <!-- Price -->
                <div class="price-highlight">
                    <span class="currency">₹</span><%= listing.price.toLocaleString("en-IN") %>
                    <small>/night</small>
                    <i class="tax-info" style="font-size: 0.8rem; margin-left: 0.5rem;">+18% GST</i>
                </div>
            </div>
        </div>
    </div>
<% } %>
</div>


<script>
    let taxSwitch = document.getElementById('switchCheckDefault');
    taxSwitch.addEventListener("click", () => {
        let taxInfoElements = document.querySelectorAll('.tax-info');
        for (let info of taxInfoElements) {
            if (info.style.display !== "none") {
                info.style.display = "none";
            } else {
                info.style.display = "inline";
            }
        }
    });

    // Favorite/Heart functionality
    function toggleFavorite(listingId) {
        const heartIcon = event.target.closest('.heart-icon').querySelector('i');
        
        if (heartIcon.classList.contains('far')) {
            // Add to favorites
            heartIcon.classList.remove('far');
            heartIcon.classList.add('fas');
            heartIcon.style.color = '#e74c3c';
            
            // Add animation
            heartIcon.closest('.heart-icon').style.transform = 'scale(1.3)';
            setTimeout(() => {
                heartIcon.closest('.heart-icon').style.transform = 'scale(1)';
            }, 200);
            
            // You can add AJAX call here to save to favorites
            console.log('Added to favorites:', listingId);
        } else {
            // Remove from favorites
            heartIcon.classList.remove('fas');
            heartIcon.classList.add('far');
            heartIcon.style.color = '#e74c3c';
            
            console.log('Removed from favorites:', listingId);
        }
    }

    // View listing details functionality
    function viewListingDetails(listingId) {
        const eyeIcon = event.target.closest('.eye-icon');
        
        // Add click animation
        eyeIcon.style.transform = 'scale(1.2)';
        setTimeout(() => {
            eyeIcon.style.transform = 'scale(1)';
            // Navigate to listing details page
            window.location.href = `/listings/${listingId}`;
        }, 150);
    }

    // Add card click functionality (excluding heart and eye buttons)
    document.addEventListener('DOMContentLoaded', function() {
        const cards = document.querySelectorAll('.listing-card .card');
        
        cards.forEach(card => {
            card.addEventListener('click', function(e) {
                // Don't navigate if clicking on heart button or eye button
                if (e.target.closest('.heart-icon') || e.target.closest('.eye-icon')) {
                    return;
                }
                
                // Get listing ID from the eye button
                const eyeBtn = card.querySelector('.eye-icon');
                if (eyeBtn) {
                    const onclick = eyeBtn.getAttribute('onclick');
                    const listingId = onclick.match(/'([^']+)'/)[1];
                    window.location.href = `/listings/${listingId}`;
                }
            });
        });
    });
</script>
