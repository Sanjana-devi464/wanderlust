<% layout('layouts/boilerplate') %>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1 class="display-4 mb-4">Cancellation Options</h1>
            <p class="lead mb-5">Understand our flexible cancellation policies and options</p>

            <h2>Cancellation Policies</h2>
            <div class="row mt-4">
                <div class="col-md-4 mb-4">
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Flexible</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Full refund</strong> if cancelled up to 24 hours before check-in</p>
                            <p><strong>50% refund</strong> if cancelled within 24 hours</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">Moderate</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Full refund</strong> if cancelled up to 5 days before check-in</p>
                            <p><strong>50% refund</strong> if cancelled within 5 days</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-danger">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0">Strict</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Full refund</strong> if cancelled up to 14 days before check-in</p>
                            <p><strong>50% refund</strong> if cancelled 7-14 days before</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-4">
                <h5>Need to cancel?</h5>
                <p class="mb-0">Visit your <a href="/listings" class="alert-link">bookings page</a> or <a href="/help" class="alert-link">contact support</a> for assistance.</p>
            </div>
        </div>
    </div>
</div>
